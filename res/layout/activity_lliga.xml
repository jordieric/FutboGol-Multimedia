<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Lliga" >

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_gravity="top"
        android:background="@drawable/border"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvCognom"
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="#F3F781"
            android:gravity="center"
            android:textSize="16dp"
            android:text="IntrodueÃ¯x el nom de la nova LLIGA"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#2E64FE" />

        <EditText
            android:id="@+id/iniciCognom"
            android:layout_width="275dp"
            android:layout_height="45dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:layout_marginBottom="8dp"
            android:gravity="center" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/lligapropia"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:background="@drawable/botorodo"
            android:longClickable="true"
            android:onClick="crealliga"
            android:text="@string/lligapropia"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/gestiolligues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/botorodo"
            android:text="@string/veurelligues"
            android:onClick="gestiolligues"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>